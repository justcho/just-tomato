
<view class="home-container">
  <scroll-view class="todoList" scroll-y="true">
     <view class="item" wx:for="{{lists}}">
      <view class="select"></view>
      <text>{{item.text}}</text>
    </view> 
  </scroll-view>

  <g-button type="change" class="createButton" text="创建任务" bindtap='showCreateConfirm'></g-button>
  <view class="tomato-wrapper">
    <navigator class="tomato" url="/pages/tomato/tomato">
     <g-clock text="点击开始闹钟"></g-clock>
    </navigator>
</view>
<g-confirm placeholder="我完成了什么" bindconfirm="confirm" bindcancel="cancel" visible="{{visible}}"></g-confirm>
</view>

